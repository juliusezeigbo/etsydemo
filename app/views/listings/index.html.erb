<div class="jumbotron">
<h1>Handcrafted items from around the world</h1>
<h2 align="right">Discover one-of-a-kind items</h2>
</div>
<div class="center">
<div class="row">
   <% @listings.each do |listing| %>
<div class="col-md-3">
    <div class="thumbnail">
            <%= link_to image_tag(listing.image.url), listing %>
           
       <div class="caption">
           <h3><%= listing.name %></h3>
             <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
            
              <% if (user_signed_in?) && (current_user == listing.user) %>
                  
              <% end %>
             <!--<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
       </div>
    </div>
</div>
  <% end %>   
</div>
</div>
<br>
    <% if user_signed_in? %>
        <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
    <% end %>